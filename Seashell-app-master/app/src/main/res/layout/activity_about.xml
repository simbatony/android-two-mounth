<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="me.drakeet.seashell.ui.AboutActivity">

    <ScrollView
        android:id="@+id/sc_about"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/bg_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="128px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/versionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appname_about"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="Version"
                android:textColor="#FF0000"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/appname_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/versionNumber"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:text="@string/my_name"
                android:textColor="@color/lite_text_color" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="@dimen/about_line_marginTop"
                android:text="@string/my_email"
                android:textColor="@color/lite_text_color" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView"
                android:layout_marginTop="@dimen/about_line_marginTop"
                android:autoLink="web"
                android:text="@string/my_open_source_link"
                android:textColor="@color/lite_text_color" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="@dimen/about_line_marginTop"
                android:autoLink="web"
                android:text="@string/my_blog"
                android:textColor="@color/lite_text_color" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:autoLink="web"
                android:lineSpacingMultiplier="1.4"
                android:text="@string/about_declaration"
                android:textColor="@color/lite_text_color" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="@dimen/about_line_marginTop"
                android:autoLink="web"
                android:text="贝壳单词访谈及其理念：\nhttp://www.wandoujia.com/award/blog/me.drakeet.seashell"
                android:textColor="@color/lite_text_color" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout><!--
